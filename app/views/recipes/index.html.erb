<h1>Searching for <%= @keyword %></h1>
<table border="1">
<tr>
	<th>Image</th>
	<th>Title</th>
	<th>Rating</th>
</tr>
<% @recipes.each do |recipe| %>
<tr>
	<td><%= link_to (image_tag(recipe["image_url"], size: '100x100')), recipe["source_url"] %></td>
	<td><%= link_to sanitize(recipe["title"]), recipe["source_url"] %></td>
	<td><%= recipe["social_rank"].to_i.round %></td>
</tr>
<% end %>
</table>